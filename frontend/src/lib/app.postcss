@tailwind base;
@tailwind components;
@tailwind utilities;

/* frontend/src/lib/forms/Form.svelte */
form {
  input {
    @apply mb-4;
  }

  button,
  a {
    @apply mt-4;
  }

  .input-error {
    @apply mb-0;
  }
}

.overflow-wrap {
  overflow-wrap: break-word;
  overflow: hidden;
}

button.button-badge:not([disabled]) {
  @apply hover:drop-shadow-xl hover:brightness-90;
}

form {
    input, select, textarea {
        margin: 0;
    }

    .form-control {
        @apply mb-2;
    }
}
