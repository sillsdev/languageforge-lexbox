@tailwind base;
@tailwind components;
@tailwind utilities;

:host, :root, html, body, .app {
  @apply block min-h-full;
  scroll-behavior: smooth;
  @apply bg-surface-100;
  color: var(--base-text);
}

.dialog {
  height: calc(100vh - 100px);
  @apply flex flex-col;
}

.Checkbox *, label:has(.Switch) {
  cursor: pointer;
}

.side-scroller {
  max-height: calc(100vh - 32px);
  position: sticky;
  top: 16px;
}
