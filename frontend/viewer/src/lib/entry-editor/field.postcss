.field {
    @apply grid grid-cols-subgrid col-span-3 items-center mb-4;

    &.multi-field {
      @apply items-baseline;
    }

    .fields {
      @apply grid grid-cols-subgrid col-span-2 gap-1;
    }

    &.multi-field .fields {
      .ws-field, .ws-field-wrapper {
        @apply grid grid-cols-subgrid col-span-2;
      }
    }

    &.single-field .fields {
      @apply grid grid-cols-subgrid;
      grid-column-start: 3;
    }

    .item-list-field {
      @apply col-span-2 pl-4;
    }

    .readonly {
      &.TextField, .TextField {
        opacity: 1;

        [class~="border"] {
          border: none;
        }

        input {
          /* enable standard text selection */
          pointer-events: auto;
          cursor: text;
        }

        .append {
          display: none;
        }
      }
    }
  }
