{
  "ReverseProxy": {
    //config reference https://microsoft.github.io/reverse-proxy/articles/config-files.html#configuration-structure
    "Routes": {
      "resumable": {
        "Order": 10,
        "ClusterId": "resumable-web",
        "AuthorizationPolicy": "UserHasAccessToProject",
        "Match": {
          "Path": "/api/v03/{**catch-all}"
        }
      },
      "hg": {
        "Order": 20,
        "ClusterId": "hg-web",
        "AuthorizationPolicy": "UserHasAccessToProject",
        "Match": {
          "Path": "/{project-code}"
        },
        "Transforms": [
          {
            "PathPrefix": "/hg"
          }
        ]
      },
      "hg-web-view": {
        "Order": 11,
        "ClusterId": "hg-web",
        "AuthorizationPolicy": "UserHasAccessToProject",
        "Match": {
          "Path": "/api/hg-view/{project-code}/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/hg-view"
          },
          {
            "PathPrefix": "/hg"
          }
        ]
      },
      "hg-web-view-static-rewrite": {
        "Order": 10,
        "ClusterId": "hg-web",
        "Match": {
          "Path": "/hg/static/{**catch-all}",
          "Headers":[
            {
              "Name": "Referer",
              "Values": [
                "/api/hg-view/",
                "/static/hgk/css/icofont.min.css"
              ],
              "Mode": "Contains"
            }
          ]
        }
      }
    },
    "Clusters": {
      "hg-web": {
        "Destinations": {
          "hg-web-server": {
            "Address": "http://localhost:8088/"
          }
        }
      },
      "resumable-web": {
        "Destinations": {
          "resumable-web-server": {
            "Address": "http://hgresumable:80/"
          }
        }
      }
    }
  },
  "LexBoxApi": {
    "Url": null
  }
}
