{
  "Logging": {
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "IncludeScopes": true
      }
    },
    "LogLevel": {
      "Default": "Information",
      "LexBoxApi": "Information",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.AspNetCore.HttpOverrides.ForwardedHeadersMiddleware": "Debug",
      "Microsoft.EntityFrameworkCore": "Information",
      "MongoDB.Command": "Debug"
    }
  },
  "ForwardedHeadersOptions": {
    "ForwardedHeaders": "All",
    "AllowedHosts": [
      "localhost",
      "languagedepot.org",
      "*.languagedepot.org",
      "*.languageforge.org"
    ],
    "KnownNetworks": []
  },
  "HttpLoggingOptions": {
    "AdditionalRequestHeaders": [
      "X-Forwarded-Proto",
      "X-Forwarded-Host",
      "X-Forwarded-For"
    ],
    "AdditionalResponseHeaders": [
      "WWW-Authenticate",
      "lexbox-version"
    ]
  },
  "AllowedHosts": "*",
  "DbConfig": {
    "LexBoxConnectionString": null
  },
  "CloudFlare": {
    "TurnstileKey": null
  },
  "HgConfig": {
    "RepoPath": null
  },
  "Authentication": {
    "Jwt": {
      "Secret": null,
//      does not effect jwt used for the cookie
      "Lifetime": "01:00",
      "EmailJwtLifetime": "3.00:00", //3 days, 0 hours
      "SendReceiveJwtLifetime": "12:00", //12 hours
      "SendReceiveRefreshJwtLifetime": "90.00:00", //90 days
      "ClockSkew": "00:00:00"
    },
    "Cookie": {
//      properties declared in CookieAuthenticationOptions
//      15 days, 0 hours
      "ExpireTimeSpan": "15.00:00"
    },
    "OpenId": {
      "Enable": false
    }
  },
  "Otel": {
    "Endpoint": "http://localhost:4317"
  },
  "Email": {
    "CreateProjectEmailDestination": "lexbox_support@groups.sil.org"
  },
  "Services": {
    "fwHeadless": {
      "http": ["fw-headless:8081"]
    }
  },
  "FwLiteRelease": {
    "Editions": {
      "Windows": {
        // ends with .msixbundle regex
        "FileNameRegex": "(?i)\\.msixbundle$"
      },
      "Linux": {
        // ends with linux.zip regex
        "FileNameRegex": "(?i)linux\\.zip$"
      }
    }
  }
}
