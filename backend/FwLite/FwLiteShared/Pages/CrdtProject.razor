@page "/project/{projectName}"
@using FwLiteShared.Layout
@using FwLiteShared.Services
@using Microsoft.Extensions.DependencyInjection
@inherits OwningComponentBase
@implements IAsyncDisposable
@layout SvelteLayout;

@code {

    [Parameter]
    public required string ProjectName { get; set; }

    private IAsyncDisposable? _disposable;

    protected override async Task OnInitializedAsync()
    {
        var fwLiteProvider = ScopedServices.GetRequiredService<FwLiteProvider>();
        _disposable = await fwLiteProvider.InjectCrdtProject(ScopedServices, ProjectName);
    }

    public async ValueTask DisposeAsync()
    {
        if (_disposable is not null)
            await _disposable.DisposeAsync();
        //dispose isn't called because this component implements IAsyncDisposable
        ((IDisposable)this).Dispose();
    }

}
